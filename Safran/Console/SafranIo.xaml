<Window x:Class="SafranConsole.Console.SafranIo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="Safran.io" Height="500" Width="760" Background="Black" Foreground="#FFFFC000" FontFamily="Tahoma">
    <Grid>
        <ScrollViewer Name="Scroller" Margin="0" Background="Black" Foreground="#FFFFC000" Cursor="IBeam" MouseUp="FocusConsole">
            <StackPanel Cursor="IBeam" MouseUp="FocusConsole">
                <ItemsControl ItemsSource="{Binding ConsoleOutput, Mode=OneWay}" Foreground="#FFFFC000" BorderThickness="1,0,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=.}" Foreground="#FFFFC000" FontFamily="Tahoma"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBox Text="{Binding ConsoleInput, Mode=TwoWay}" CaretIndex="{x:Static System:Int32.MaxValue}" Background="Black" Foreground="#FFFFC000" FontFamily="Tahoma" x:Name="InputBlock" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" BorderThickness="0" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
